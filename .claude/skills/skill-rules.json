{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      }
    },
    "nextjs-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Next.js development best practices for App Router, Server/Client Components, routing, and performance",
      "promptTriggers": {
        "keywords": [
          "Next.js",
          "Next",
          "nextjs",
          "App Router",
          "Server Component",
          "Client Component",
          "服务端组件",
          "客户端组件",
          "page.tsx",
          "layout.tsx",
          "loading.tsx",
          "error.tsx",
          "next.config",
          "generateStaticParams",
          "generateMetadata",
          "revalidate",
          "use client",
          "use server"
        ],
        "intentPatterns": [
          "(创建|添加|新建|生成).*?(页面|路由|组件|布局)",
          "(create|add|build|generate).*?(page|route|component|layout)",
          "(配置|设置|优化).*?(Next|路由|性能)",
          "(configure|setup|optimize).*?(Next|routing|performance)",
          "动态路由",
          "dynamic.*?route",
          "数据.*?(获取|请求)",
          "(fetch|get).*?data"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/app/**/*.tsx",
          "**/app/**/*.ts",
          "**/app/**/page.tsx",
          "**/app/**/layout.tsx",
          "**/app/**/loading.tsx",
          "**/app/**/error.tsx",
          "**/next.config.*"
        ]
      }
    },
    "api-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "RESTful API development best practices for Node.js, Express, TypeScript with comprehensive guidance on endpoints, routes, middleware, authentication, and error handling",
      "promptTriggers": {
        "keywords": [
          "API",
          "api",
          "REST",
          "RESTful",
          "endpoint",
          "endpoints",
          "route",
          "routes",
          "路由",
          "接口",
          "middleware",
          "中间件",
          "Express",
          "Fastify",
          "Koa",
          "HTTP",
          "status code",
          "状态码",
          "authentication",
          "authorization",
          "认证",
          "鉴权",
          "validation",
          "验证",
          "error handling",
          "错误处理"
        ],
        "intentPatterns": [
          "(create|add|build|implement).*?(API|api|endpoint|route)",
          "(创建|添加|构建|实现).*?(API|接口|路由|端点)",
          "(design|设计).*?(API|接口|架构)",
          "(handle|处理).*?(error|错误|异常)",
          "(add|添加).*?(middleware|中间件)",
          "(setup|configure|配置|设置).*?(auth|认证|鉴权)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/routes/**/*.ts",
          "**/routes/**/*.js",
          "**/api/**/*.ts",
          "**/api/**/*.js",
          "**/controllers/**/*.ts",
          "**/controllers/**/*.js",
          "**/middleware/**/*.ts",
          "**/middleware/**/*.js"
        ],
        "contentPatterns": [
          "express\\(\\)",
          "Router\\(\\)",
          "app\\.(get|post|put|patch|delete)",
          "router\\.(get|post|put|patch|delete)",
          "Request.*Response",
          "middleware",
          "NextFunction"
        ]
      }
    }
  }
}
